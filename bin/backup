#!/bin/bash
# Backups directories to disk/server/...
# $BACKUPDIR in ~/.global

directories=(Codes Docs Podcast Templates Tl Videos .android .cache .dict .extra .fonts .gnupg .local .offline .vscode-oss .vm /opt/android-sdk/  /snapshots /var/docker/volumes )

if [ -z $1 ]; then
	echo "Backup to $BACKUPDIR"
	rsync -av $directories $BACKUPDIR
else
	echo "Backup to $1"
	rsync -av $directories $1
fi
